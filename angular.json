{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "defaultProject": "client",
  "projects": {
    "client": {
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:browser",
          "configurations": {
            "production": {
              "aot": true,
              "budgets": [
                {
                  "maximumError": "5mb",
                  "maximumWarning": "2mb",
                  "type": "initial"
                }
              ],
              "buildOptimizer": true,
              "extractCss": true,
              "extractLicenses": true,
              "fileReplacements": [
                {
                  "replace": "remote-control/environments/environment.ts",
                  "with": "remote-control/environments/environment.prod.ts"
                }
              ],
              "namedChunks": false,
              "optimization": true,
              "outputHashing": "all",
              "sourceMap": false,
              "vendorChunk": false
            }
          },
          "options": {
            "assets": [
              "remote-control/favicon.ico",
              "remote-control/assets",
              "remote-control/robots.txt"
            ],
            "index": "remote-control/index.html",
            "main": "remote-control/main.ts",
            "outputPath": "dist/remote-control",
            "polyfills": "remote-control/polyfills.ts",
            "scripts": [],
            "styles": ["remote-control/styles.scss"],
            "tsConfig": "remote-control/tsconfig.json"
          }
        },
        "extract-i18n": {
          "builder": "@angular-devkit/build-angular:extract-i18n",
          "options": {
            "browserTarget": "client:build"
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "configurations": {
            "production": {
              "fix": false
            }
          },
          "options": {
            "exclude": ["**/node_modules/**"],
            "fix": true,
            "tsConfig": ["remote-control/tsconfig.json"]
          }
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "configurations": {
            "production": {
              "browserTarget": "client:build:production",
              "open": false
            }
          },
          "options": {
            "browserTarget": "client:build",
            "open": true
          }
        }
      },
      "prefix": "app",
      "projectType": "application",
      "root": "remote-control/",
      "schematics": {
        "@schematics/angular:component": {
          "styleext": "scss"
        }
      },
      "sourceRoot": "remote-control/"
    }
  },
  "version": 1
}
