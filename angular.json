{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "defaultProject": "client",
  "projects": {
    "client": {
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:browser",
          "configurations": {
            "production": {
              "aot": true,
              "budgets": [
                {
                  "maximumError": "5mb",
                  "maximumWarning": "2mb",
                  "type": "initial"
                }
              ],
              "buildOptimizer": true,
              "extractCss": true,
              "extractLicenses": true,
              "fileReplacements": [
                {
                  "replace": "mrc-client/environments/environment.ts",
                  "with": "mrc-client/environments/environment.prod.ts"
                }
              ],
              "namedChunks": false,
              "optimization": true,
              "outputHashing": "all",
              "sourceMap": false,
              "vendorChunk": false
            }
          },
          "options": {
            "assets": [
              "mrc-client/favicon.ico",
              "mrc-client/assets",
              "mrc-client/robots.txt"
            ],
            "index": "mrc-client/index.html",
            "main": "mrc-client/main.ts",
            "outputPath": "dist/mrc-client",
            "polyfills": "mrc-client/polyfills.ts",
            "scripts": [],
            "styles": ["mrc-client/styles.scss"],
            "tsConfig": "mrc-client/tsconfig.app.json"
          }
        },
        "extract-i18n": {
          "builder": "@angular-devkit/build-angular:extract-i18n",
          "options": {
            "browserTarget": "client:build"
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "configurations": {
            "production": {
              "fix": false
            }
          },
          "options": {
            "exclude": ["**/node_modules/**"],
            "fix": true,
            "tsConfig": [
              "mrc-client/tsconfig.app.json",
              "mrc-client/tsconfig.test.json"
            ]
          }
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "configurations": {
            "production": {
              "browserTarget": "client:build:production",
              "open": false
            }
          },
          "options": {
            "browserTarget": "client:build",
            "open": true
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "configurations": {
            "production": {
              "browsers": "ChromeHeadlessCI",
              "codeCoverage": true,
              "progress": false,
              "watch": false
            }
          },
          "options": {
            "assets": [
              "mrc-client/favicon.ico",
              "mrc-client/assets",
              "mrc-client/robots.txt"
            ],
            "karmaConfig": "mrc-client/karma.conf.js",
            "main": "mrc-client/test.ts",
            "polyfills": "mrc-client/polyfills.ts",
            "scripts": [],
            "styles": ["mrc-client/styles.scss"],
            "tsConfig": "mrc-client/tsconfig.test.json"
          }
        }
      },
      "prefix": "app",
      "projectType": "application",
      "root": "mrc-client/",
      "schematics": {
        "@schematics/angular:component": {
          "styleext": "scss"
        }
      },
      "sourceRoot": "mrc-client/"
    },
    "client-e2e": {
      "architect": {
        "e2e": {
          "builder": "@angular-devkit/build-angular:protractor",
          "configurations": {
            "production": {
              "devServerTarget": "client:serve:production",
              "protractorConfig": "mrc-client/protractor-ci.conf.js"
            }
          },
          "options": {
            "devServerTarget": "client:serve",
            "protractorConfig": "mrc-client/protractor.conf.js"
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "configurations": {
            "production": {
              "fix": false
            }
          },
          "options": {
            "exclude": ["**/node_modules/**"],
            "fix": true,
            "tsConfig": "mrc-client/tsconfig.e2e.json"
          }
        }
      },
      "prefix": "",
      "projectType": "application",
      "root": "mrc-client/e2e/"
    }
  },
  "version": 1
}
