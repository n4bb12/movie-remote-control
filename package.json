{
  "name": "movie-remote-control",
  "version": "0.0.2",
  "description": "Watch movies using your phone as a remote control",
  "keywords": [
    "control",
    "keyboard",
    "mouse",
    "movie",
    "phone",
    "remote",
    "video",
    "volume"
  ],
  "homepage": "https://github.com/n4bb12/movie-remote-control/blob/master/README.md",
  "bugs": "https://github.com/n4bb12/movie-remote-control/issues",
  "repository": "github:n4bb12/movie-remote-control",
  "license": "ISC",
  "author": "Abraham Schilling",
  "files": [
    "build"
  ],
  "bin": {
    "movie-remote-control": "build/server/cli.js"
  },
  "scripts": {
    "build": "run-s build:clean build:icons && run-p build:client build:server",
    "build:clean": "rimraf build",
    "build:client": "ng build client -c production",
    "build:icons": "svg-sprite --symbol --dest client/assets --symbol-dest . --symbol-sprite icon-sprite.svg \"client/assets/icons/*.svg\"",
    "build:server": "tsc --project server/tsconfig.json",
    "dev": "run-p dev:*",
    "dev:client": "ng serve client",
    "dev:server": "nodemon --watch server --ext ts --exec yarn ts-node --project server/tsconfig.json server/cli.ts --port 3200",
    "lint": "run-p lint:*",
    "lint:client": "ng lint",
    "lint:server": "tslint --project server",
    "prod": "node build/server/cli.js --port 3000"
  },
  "dependencies": {
    "@angular/animations": "~7.0.4",
    "@angular/common": "~7.0.4",
    "@angular/compiler": "~7.0.4",
    "@angular/core": "~7.0.4",
    "@angular/forms": "~7.0.4",
    "@angular/http": "~7.0.4",
    "@angular/platform-browser": "~7.0.4",
    "@angular/platform-browser-dynamic": "~7.0.4",
    "@angular/router": "~7.0.4",
    "core-js": "^2.5.4",
    "express": "^4.16.4",
    "express-history-api-fallback": "^2.2.1",
    "fontfaceobserver": "^2.0.13",
    "getopts": "^2.2.3",
    "hammerjs": "^2.0.8",
    "normalize-scss": "^7.0.1",
    "opn": "^5.4.0",
    "qrcode": "^1.3.2",
    "robotjs": "^0.5.1",
    "rxjs": "~6.3.3",
    "typeface-krub": "^0.0.61",
    "w3c-keys": "^0.3.6",
    "ws": "^6.1.2",
    "zone.js": "~0.8.26"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.10.6",
    "@angular/cli": "~7.0.6",
    "@angular/compiler-cli": "~7.0.4",
    "@angular/language-service": "~7.0.4",
    "@n4bb12/config-tslint": "^1.4.0",
    "@types/express": "^4.16.0",
    "@types/hammerjs": "^2.0.36",
    "@types/node": "~10.12.9",
    "codelyzer": "~4.5.0",
    "cross-env": "^5.2.0",
    "nodemon": "^1.18.6",
    "npm-run-all": "^4.1.3",
    "rimraf": "^2.6.2",
    "svg-sprite": "^1.5.0",
    "ts-node": "~7.0.0",
    "tslint": "~5.11.0",
    "tslint-angular": "^1.1.2",
    "typescript": "~3.1.6",
    "wait-on": "^3.2.0"
  },
  "$schema": "http://json.schemastore.org/package"
}
